{
  "compilerOptions": {
    "strict": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist"
  },
  "typeRoots": [
    // "node_modules/@types",
    // "./src/@types",
    "./src/types",
    "./node_modules/@types"
  ],
  "types": [
    "node",
    "express"
  ],
  "include": [
    "src/**/*",
    "@types/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}